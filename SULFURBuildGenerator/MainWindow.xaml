<Window x:Class="SULFURBuildGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SULFURBuildGenerator" xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        mc:Ignorable="d"
        Title="SULFUR Build Generator" Height="705" Width="1392" Background="#FF383100">
    <Grid Margin="0,0,0,20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Left" Width="1492" Source="/Goblin Crosshair Guild Variant png.png" RenderTransformOrigin="0.285,0.572" Stretch="Fill" Opacity="0.5" ClipToBounds="True" Margin="0,236,0,-19" Grid.RowSpan="3">
            <Image.Effect>
                <BlurEffect/>
            </Image.Effect>
        </Image>
        <CheckBox x:Name="All_Guns" Content="All Guns" HorizontalAlignment="Left" Margin="35,49,0,0" VerticalAlignment="Top" Width="64" IsChecked="True" Foreground="White" Height="15"/>
        <CheckBox x:Name="Pistols" Content="Pistols" HorizontalAlignment="Left" Margin="109,49,0,0" VerticalAlignment="Top" Width="54" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="Revolvers" Content="Revolvers" HorizontalAlignment="Left" Margin="173,49,0,0" VerticalAlignment="Top" Width="71" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="Shotguns" Content="Shotguns" HorizontalAlignment="Left" Margin="254,49,0,0" VerticalAlignment="Top" Width="70" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="SMGs" Content="SMGs" HorizontalAlignment="Left" Margin="334,49,0,0" VerticalAlignment="Top" Width="51" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="ARs" Content="ARs" HorizontalAlignment="Left" Margin="395,49,0,0" VerticalAlignment="Top" Width="40" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="LMGs" Content="LMGs" HorizontalAlignment="Left" Margin="445,49,0,0" VerticalAlignment="Top" Width="50" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="Rifles" Content="Rifles" HorizontalAlignment="Left" Margin="505,49,0,0" VerticalAlignment="Top" Width="48" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="Snipers" Content="Snipers" HorizontalAlignment="Left" Margin="563,49,0,0" VerticalAlignment="Top" Width="59" IsChecked="False" Foreground="White" Height="15"/>
        <TextBlock x:Name="weapon_categories" HorizontalAlignment="Left" Height="32" Margin="35,12,0,0" TextWrapping="Wrap" Text="Weapon Categories" VerticalAlignment="Top" Width="340" FontSize="24" FontFamily="Fredoka" Foreground="White" FontWeight="Bold"/>
        <TextBlock x:Name="attachments" HorizontalAlignment="Left" Height="32" Margin="35,72,0,0" TextWrapping="Wrap" Text="Attachments" VerticalAlignment="Top" Width="379" FontSize="24" FontFamily="Fredoka" Foreground="White" FontWeight="Bold"/>
        <CheckBox x:Name="allAttachmentsCheckbox" Content="All Attachments" HorizontalAlignment="Left" Margin="35,109,0,0" VerticalAlignment="Top" Width="104" IsChecked="True" Foreground="White" Height="15"/>
        <CheckBox x:Name="barrels" Content="Barrels" HorizontalAlignment="Left" Margin="149,109,0,0" VerticalAlignment="Top" Width="56" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="optics" Content="Optics" HorizontalAlignment="Left" Margin="215,109,0,0" VerticalAlignment="Top" Width="54" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="Laser" Content="Laser" HorizontalAlignment="Left" Margin="279,109,0,0" VerticalAlignment="Top" Width="48" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="FiringMode" Content="Firing Mode" HorizontalAlignment="Left" Margin="338,109,0,0" VerticalAlignment="Top" Width="85" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="Rechamber" Content="Rechamber" HorizontalAlignment="Left" Margin="433,109,0,0" VerticalAlignment="Top" Width="80" IsChecked="False" Foreground="White" Height="15"/>
        <TextBlock x:Name="enchantment_count" HorizontalAlignment="Left" Height="32" Margin="35,192,0,0" TextWrapping="Wrap" Text="Enchantment Count" VerticalAlignment="Top" Width="250" FontSize="24" FontFamily="Fredoka" Foreground="White" FontWeight="Bold"/>
        <Slider x:Name="enchantment_slider" HorizontalAlignment="Left" Margin="35,229,0,0" Width="193" Height="47" RenderTransformOrigin="0.508,1.082" Maximum="5" SmallChange="1" VerticalAlignment="Top" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True" Value="5"/>
        <TextBlock HorizontalAlignment="Left" Height="14" Margin="35,254,0,0" TextWrapping="Wrap" Text="0          1         2         3         4         5" VerticalAlignment="Top" Width="193" Foreground="White"/>
        <TextBlock x:Name="enchantment_count_Copy" HorizontalAlignment="Left" Height="32" Margin="35,276,0,0" TextWrapping="Wrap" Text="Scrolls" VerticalAlignment="Top" Width="250" FontSize="24" FontFamily="Fredoka" Foreground="White" FontWeight="Bold"/>
        <RadioButton x:Name="t1_scrolls_button" Content="Tier 1" HorizontalAlignment="Left" Margin="137,313,0,0" VerticalAlignment="Top" Background="White" Foreground="White" GroupName="scrolls" Width="46" Height="14"/>
        <RadioButton x:Name="t2_scrolls_button" Content="Tier 2" HorizontalAlignment="Left" Margin="193,313,0,0" VerticalAlignment="Top" Background="White" Foreground="White" GroupName="scrolls" Height="14" Width="48"/>
        <RadioButton x:Name="no_scrolls_button" Content="None" HorizontalAlignment="Left" Margin="35,313,0,0" VerticalAlignment="Top" Background="White" Foreground="White" GroupName="scrolls" IsChecked="False" Height="14" Width="48"/>
        <RadioButton x:Name="all_scrolls_button" Content="All" HorizontalAlignment="Left" Margin="93,313,0,0" VerticalAlignment="Top" Background="White" Foreground="White" GroupName="scrolls" IsChecked="True" Height="14" Width="34"/>
        <Button x:Name="generate_build_button" Content="Generate Build" HorizontalAlignment="Left" Margin="35,555,0,0" VerticalAlignment="Top" Height="78" Width="306" FontFamily="Fredoka" FontSize="24" IsDefault="True" Click="ButtonGenerateBuild_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <ListView x:Name="build_box" Margin="370,206,598,10" SelectionMode="Multiple" SelectionChanged="build_box_SelectionChanged" >
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox Tag="{Binding Done}" IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=IsSelected}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Item" DisplayMemberBinding="{Binding Item}" Width="123" />
                        <GridViewColumn Header="Selection" DisplayMemberBinding="{Binding Selection}" Width="225"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox x:Name="scroll_dropdown" HorizontalAlignment="Left"  Margin="35,333,0,0" VerticalAlignment="Top" Width="306" Height="29" IsEnabled="False">
            <ComboBoxItem Content="Dark"/>
            <ComboBoxItem Content="Earth"/>
            <ComboBoxItem Content="Embers"/>
            <ComboBoxItem Content="Frostbite"/>
            <ComboBoxItem Content="Light"/>
            <ComboBoxItem Content="Nature"/>
            <ComboBoxItem Content="Plague"/>
            <ComboBoxItem Content="Surge"/>
            <ComboBoxItem Content="Water"/>
            <ComboBoxItem Content="Aftershock"/>
            <ComboBoxItem Content="Chain Lightning"/>
            <ComboBoxItem Content="Chaos Strike"/>
            <ComboBoxItem Content="Charm"/>
            <ComboBoxItem Content="Corpse Explosion"/>
            <ComboBoxItem Content="Crusader"/>
            <ComboBoxItem Content="Explosions"/>
            <ComboBoxItem Content="Fear"/>
            <ComboBoxItem Content="Flame Thrower"/>
            <ComboBoxItem Content="Holy Fire"/>
            <ComboBoxItem Content="Holy Purge"/>
            <ComboBoxItem Content="Lava"/>
            <ComboBoxItem Content="Least Resistance"/>
            <ComboBoxItem Content="Noxiosa"/>
            <ComboBoxItem Content="Pesticide"/>
            <ComboBoxItem Content="Petrification"/>
            <ComboBoxItem Content="Petroleum"/>
            <ComboBoxItem Content="Poison Blood"/>
            <ComboBoxItem Content="Prism"/>
            <ComboBoxItem Content="Rocket Launcher"/>
            <ComboBoxItem Content="Slush"/>
            <ComboBoxItem Content="Sacrifice"/>
            <ComboBoxItem Content="Thunderbolt"/>
            <ComboBoxItem Content="Toxic Lobotomy"/>
            <ComboBoxItem Content="Voodoo"/>
        </ComboBox>
        <RadioButton x:Name="choose_scrolls_button" Content="Choose..." HorizontalAlignment="Left" Margin="253,313,0,0" VerticalAlignment="Top" Background="White" Foreground="White" GroupName="scrolls" Checked="choose_scrolls_button_Checked" Unchecked="choose_scrolls_button_Unchecked" Height="14" Width="66"/>
        <TextBlock x:Name="equipmentHeader" HorizontalAlignment="Left" Height="32" Margin="35,132,0,0" TextWrapping="Wrap" Text="Equipment" VerticalAlignment="Top" Width="379" FontSize="24" FontFamily="Fredoka" Foreground="White" FontWeight="Bold"/>
        <CheckBox x:Name="allEquipmentCheckbox" Content="All Equipment" HorizontalAlignment="Left" Margin="35,169,0,0" VerticalAlignment="Top" Width="95" IsChecked="True" Foreground="White" Height="15"/>
        <CheckBox x:Name="headEquipmentCheckbox" Content="Head" HorizontalAlignment="Left" Margin="140,169,0,0" VerticalAlignment="Top" Width="48" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="bodyEquipmentCheckbox" Content="Body" HorizontalAlignment="Left" Margin="198,169,0,0" VerticalAlignment="Top" Width="48" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="trinket1EquipmentCheckbox" Content="Trinket 1" HorizontalAlignment="Left" Margin="419,168,0,0" VerticalAlignment="Top" Width="65" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="trinket2EquipmentCheckbox" Content="Trinket 2" HorizontalAlignment="Left" Margin="494,168,0,0" VerticalAlignment="Top" Width="66" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="trinket3EquipmentCheckbox" Content="Trinket 3" HorizontalAlignment="Left" Margin="570,168,0,0" VerticalAlignment="Top" Width="65" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="trinket4EquipmentCheckbox" Content="Trinket 4" HorizontalAlignment="Left" Margin="645,169,0,0" VerticalAlignment="Top" Width="66" IsChecked="False" Foreground="White" RenderTransformOrigin="0.486,-0.13" Height="15"/>
        <CheckBox x:Name="leftFootEquipmentCheckbox" Content="Left Foot" HorizontalAlignment="Left" Margin="256,169,0,0" VerticalAlignment="Top" Width="67" IsChecked="False" Foreground="White" Height="15"/>
        <CheckBox x:Name="rightFootEquipmentCheckbox" Content="Right Foot" HorizontalAlignment="Left" Margin="333,169,0,0" VerticalAlignment="Top" Width="76" IsChecked="False" Foreground="White" Height="15"/>
        <Rectangle HorizontalAlignment="Left" Height="559" Margin="858,64,0,0" Stroke="#FFFDB142" VerticalAlignment="Top" Width="242" Fill="#FF30424A" RadiusX="13.707" RadiusY="13.707" UseLayoutRounding="False" Opacity="0.902"/>
        <Rectangle HorizontalAlignment="Left" Height="40" Margin="858,64,0,0" Stroke="#FFFDB142" VerticalAlignment="Top" Width="242" Fill="#FFFDB142" RadiusX="13.207" RadiusY="13.207"/>
        <Rectangle HorizontalAlignment="Left" Height="28" Margin="858,76,0,0" Stroke="#FFFDB142" VerticalAlignment="Top" Width="242" Fill="#FFFDB142"/>
        <TextBlock x:Name="cardWeaponName" HorizontalAlignment="Left" Margin="871,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="224" FontSize="20" FontFamily="Fredoka SemiBold"/>
        <TextBlock x:Name="cardWeaponType" HorizontalAlignment="Left" Margin="864,108,0,0" TextWrapping="Wrap" Text="Type: " VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White"/>
        <TextBlock x:Name="cardAmmoType" HorizontalAlignment="Left" Margin="864,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Ammo Type:"/>
        <TextBlock x:Name="cardDamage" HorizontalAlignment="Left" Margin="864,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Damage: "/>
        <TextBlock x:Name="cardRPM" HorizontalAlignment="Left" Margin="864,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="RPM: "/>
        <TextBlock x:Name="cardSpread" HorizontalAlignment="Left" Margin="864,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Spread:"/>
        <TextBlock x:Name="cardDurability" HorizontalAlignment="Left" Margin="864,214,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Durability:"/>
        <TextBlock x:Name="cardBaseCritChance" HorizontalAlignment="Left" Margin="864,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Base Crit Chance:"/>
        <TextBlock x:Name="cardADSCritChance" HorizontalAlignment="Left" Margin="864,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="ADS Crit Chance:"/>
        <TextBlock x:Name="cardRecoil" HorizontalAlignment="Left" Margin="864,340,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Recoil: "/>
        <TextBlock x:Name="cardBounces" HorizontalAlignment="Left" Margin="864,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Bounces:"/>
        <TextBlock x:Name="cardPenetrations" HorizontalAlignment="Left" Margin="864,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Penetrations:"/>
        <TextBlock x:Name="cardCanADS" HorizontalAlignment="Left" Margin="864,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Can ADS: "/>
        <TextBlock x:Name="cardMoneyDrops" HorizontalAlignment="Left" Margin="864,381,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Money Drops:"/>
        <TextBlock x:Name="cardOrganDrops" HorizontalAlignment="Left" Margin="864,402,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Organ Drops:"/>
        <TextBlock x:Name="cardLootDropChance" HorizontalAlignment="Left" Margin="864,423,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Loot Drop Chance:"/>
        <TextBlock x:Name="cardWeaponWeight" HorizontalAlignment="Left" Margin="864,444,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Weapon Weight:"/>
        <TextBlock x:Name="cardMovementSpeed" HorizontalAlignment="Left" Margin="864,465,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Movement Speed:"/>
        <TextBlock x:Name="cardBulletConsumeChance" HorizontalAlignment="Left" Margin="864,486,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Bullet Consume Chance:"/>
        <TextBlock x:Name="cardExtraAmmoUseChance" HorizontalAlignment="Left" Margin="864,507,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Extra Ammo Use Chance:"/>
        <TextBlock x:Name="cardBulletDrop" HorizontalAlignment="Left" Margin="864,528,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Bullet Drop:"/>
        <TextBlock x:Name="cardJumpPower" HorizontalAlignment="Left" Margin="864,549,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Jump Power:"/>
        <TextBlock x:Name="cardDrag" HorizontalAlignment="Left" Margin="864,570,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Drag:"/>
        <TextBlock x:Name="cardDurabilityUsage" HorizontalAlignment="Left" Margin="864,591,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Durability Usage:"/>
        <TextBlock x:Name="cardReloadSpeed" HorizontalAlignment="Left" Margin="864,319,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="214" FontFamily="Fredoka SemiBold" Foreground="White" Text="Reload Speed:"/>


    </Grid>
</Window>
